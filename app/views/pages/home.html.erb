<div class="homepage-wrapper">
  <div class="top-part-homepage">
    <div class="banner">
      <h1 class="home-header">Do more of what you love</h1>
        <p>Thelo helps you find professionals near you to come help you at your events</p>
      <%= link_to new_event_path do %>
      <div class="button button-homepage">
        Get Started
      </div>
      <% end %>
    </div>

    <div class="banner-image"> <%= image_tag "cover.png" %>
      <div class="user-link"></div>
    </div>
  </div>

  <div class="card-container">
    <div class="card-header">
      <h2 class="header-two">STEP ONE</h2>
