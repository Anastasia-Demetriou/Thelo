<div class= "container">
<center>
  <div class="col-xs-12 col-sm-6 col-sm-offset-3">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.input :email,
                required: false,
                autofocus: true,
                placeholder: "Email",
                input_html: { class: "form-inputs", autocomplete: "email" } %>
      <%= f.input :password,
                required: false,
                placeholder: "Password",
                input_html: { class: "form-inputs", autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

      <%= f.submit "Log in", class: "button" %>
    <% end %>



</center>
</div>
