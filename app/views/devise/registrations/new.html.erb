<body class= "body-dash">
  <div class="form-card ">

    <div class = "sign-up">
      <h2>Sign up</h2>
    </div>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

    <div class="edit-form">
      <%= f.input :first_name,
                  placeholder: "First name",
                  input_html: { class: "form-inputs", autocomplete: "First Name" } %>
      <%= f.input :last_name,
                  placeholder: "Last name",
                  input_html: { class: "form-inputs", autocomplete: "Last Name" } %>

    </div>
      <%= f.input :email,
                  autofocus: true,
                  placeholder: "Email address",
                  input_html: { class: "form-inputs", autocomplete: "email" }%>
      <%= f.input :password,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  placeholder: "Create a password",
                  input_html: { class: "form-inputs", autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  placeholder: "Confirm your password",
                  input_html: { class: "form-inputs", autocomplete: "new-password" } %>
    <div class= "professional-new-form">
      <p>Are you a Professional?</p>
      <p><%= f.input :professional %></p>
      <p>(Check this box if you have a professional service to offer)</p>
    </div>
      <%= f.input :service_ids,
                  collection: Service.all,
                  :include_blank => false,
                  prompt: 'Select Service',
                  input_html: { class: "form-inputs" } %>

      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <div class="flex-btn">
        <%= f.submit "Sign Up", class: "button" %>

      </div>

      <% end %>


  </div>
</div>
