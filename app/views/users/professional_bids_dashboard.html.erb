<div class="row status-header">
  <div class="col-xs-12 col-md-4" style="text-align: center; background-color:none;"><p>Accepted</p> </div>
  <div class="col-xs-12 col-md-4 " style="text-align: center; background-color:none;"> <p>Pending</p> </div>
  <div class="col-xs-12 col-md-4 " style=" text-align: center; background-color:none;"><p>Declined</p> </div>
</div>


</div>
  <div class="row">
    <div class="col-xs-12 col-sm-12" >
     <div class="col-xs-12 col-md-4" style="background-color:none;">
      <% @accepted_bids.each do |bid| %>
        <div class="row">
        <a href="/events/<%= bid.event.id %>" class="bid-card-link">
          <div class="bid-status-card accepted">
            <div class="card-top">
              <p><%= bid.event.name %></p>
              <%= bid.user_id %>
              <p>Your Offer: £<%= bid.quote.to_i %></p>
              <p>Event date: <%= bid.event.date.strftime("%b %e, %l:%M %p") %></p>
              <p>Event location:<%= bid.event.location %></p>
            </div>
            <div class="card-btm">
              <% if bid.status == "accepted" %>
              <% elsif bid.status == "pending" %>
              <% elsif bid.status == "declined" %>
            </div>
            <% end %>
          </div>
        </div>
        </a>
      </div>
    <% end %>
    </div>
    <div >
     <div class="col-xs-12 col-md-4 " style="background-color:none;">
      <% @pending_bids.each do |bid| %>
        <div class="row">
        <a href="/events/<%= bid.event.id %>" class="bid-card-link">
          <div class="bid-status-card pending">
            <div class="card-top">
              <p><%= bid.event.name %></p>
              <%= bid.user_id %>
              <p>Your Offer: £<%= bid.quote.to_i %></p>
              <p>Price Range: £<%= bid.event.min_price %>-<%= bid.event.max_price %></p>
              <p>Date: <%= bid.event.date.strftime("%b %e, %l:%M %p") %></p>
              <p>Location:<%= bid.event.location %></p>
            </div>
            <div class="card-btm">
              <% if bid.status == "accepted" %>
              <% elsif bid.status == "pending" %>
              <% elsif bid.status == "declined" %>
            </div>
            <% end %>
          </div>
        </div>
        </a>
      </div>
    <% end %>
  </div>

  <div >
    <div class="col-xs-12 col-md-4 " style="background-color:none;">
      <% @declined_bids.each do |bid| %>
        <a href="/events/<%= bid.event.id %>" class="bid-card-link">
          <div class="bid-status-card declined">
            <div class="card-top">
              <p><%= bid.event.name %></p>
              <%= bid.user_id %>
              <p>Your Offer: £<%= bid.quote.to_i %></p>
              <p>Price Range: £<%= bid.event.min_price %>-<%= bid.event.max_price %></p>
              <p>Date: <%= bid.event.date.strftime("%b %e, %l:%M %p") %></p>
              <p>Location:<%= bid.event.location %></p>
            </div>
            <div class="card-btm">
              <% if bid.status == "accepted" %>
              <% elsif bid.status == "pending" %>
              <% elsif bid.status == "declined" %>
            </div>
            <% end %>
          </div>
        </a>
      </div>
    <% end %>
  </div>

</div>
