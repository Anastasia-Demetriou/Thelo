<h1>Profile</h1>

<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
  <div class="row">
       <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="border-radius: 16px;">
                        <div class="well profile col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                                <figure>
                                     <img src="http://www.localcrimenews.com/wp-content/uploads/2013/07/default-user-icon-profile.png" alt="" class="img-circle" style="width:75px;" id="user-img">
                                </figure>
                                <h2><%= "#{@user.first_name.capitalize} #{@user.last_name.capitalize}" %></h2>

                                <% if @user.professional %>
                                  <h5>THELO Professional</h5>
                                <% end %>

                                <p><%= @user.services.name %></p>

                                <% if @user.professional %>
                                  <p>Bids made by<%= @user.first_name.capitalize %>:</p>
                                  <p><small class= "label label-success"><%= @user.bids.count %></small></p>
                                <% end %>

                                <% if @user.professional %>
                                  <p>Events Created by<%= @user.first_name.capitalize %>:</p>
                                  <p><small class= "label label-success"><%= @user.events.count %></small></p>
                                <% end %>

                                <p>Events Created by<%= @user.first_name.capitalize %>:</p>
                                <p><small class= "label label-success"><%= @user.events.count %></small></p>

                                 <p style="text-align:center;font-size: smaller;"><strong>A/C status: </strong><span class="tags" id="user-status">Active</span></p>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 divider text-center"></div>
                                <p style="text-align:center;font-size: smaller;"><strong>Enter here</strong></p>
                                <p style="text-align:center;font-size: smaller;" id="user-role">Enter here</p>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 divider text-center"></div>
                                    <div class="col-lg-6 left" style="text-align:center;overflow-wrap: break-word;">
                                        <h4><p style="text-align: center;"><strong id="user-globe-rank">100</strong></p></h4>
                                        <p><small class="label label-success">Top Event Host</small></p>
                                        <!--<button class="btn btn-success btn-block"><span class="fa fa-plus-circle"></span> Follow </button>-->
                                    </div>
                                    <div class=" col-lg-6 left" style="text-align:center;overflow-wrap: break-word;">
                                        <h4><p style="text-align: center;"><strong id="user-college-rank">100 </strong></p></h4>
                                        <p> <small class="label label-warning">Top Professional</small></p>
                                        <!-- <button class="btn btn-info btn-block"><span class="fa fa-user"></span> View Profile </button>-->
                                    </div>

                              </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
  </div>
</div>
